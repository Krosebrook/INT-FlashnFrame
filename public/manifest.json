{
  "name": "Flash-n-Frame Studio",
  "short_name": "Flash-n-Frame",
  "description": "Visual intelligence platform transforming repositories and articles into professional infographics and blueprints",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "orientation": "any",
  "theme_color": "#2B6C85",
  "background_color": "#0f141e",
  "categories": ["productivity", "developer tools", "graphics & design"],
  "dir": "ltr",
  "lang": "en-US",
  "scope": "/",
  "id": "flash-n-frame-studio",
  "icons": [
    {
      "src": "/icons/icon-72x72.svg",
      "sizes": "72x72",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-security.png",
      "sizes": "1024x1024",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Home screen on desktop"
    },
    {
      "src": "/screenshots/mobile-home.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Home screen on mobile"
    }
  ],
  "shortcuts": [
    {
      "name": "GitFlow",
      "short_name": "GitFlow",
      "description": "Analyze GitHub repositories",
      "url": "/?view=gitflow",
      "icons": [{ "src": "/icons/shortcut-gitflow.png", "sizes": "96x96" }]
    },
    {
      "name": "SiteSketch",
      "short_name": "SiteSketch",
      "description": "Convert articles to infographics",
      "url": "/?view=sitesketch",
      "icons": [{ "src": "/icons/shortcut-sitesketch.png", "sizes": "96x96" }]
    },
    {
      "name": "DevStudio",
      "short_name": "DevStudio",
      "description": "Interactive code exploration",
      "url": "/?view=devstudio",
      "icons": [{ "src": "/icons/shortcut-devstudio.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "application/json", "text/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/json": [".json"],
        "image/*": [".png", ".jpg", ".jpeg", ".gif", ".svg", ".webp"],
        "text/*": [".txt", ".md", ".csv"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  }
}
